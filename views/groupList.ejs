<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Group List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head>

<body>
  <%- include("partials/navbar") %>

  <% if (groupList) { %>

  <div>
  <table class="table caption-top">
    <caption>List of Groups</caption>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Group name</th>
        <th scope="col">Description</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% for( let index=0; index < groupList.length; index++ ) { %>

      <% let ele=groupList[index] ; %>

      <tr>
        <th scope="row"><%= index+1 %></th>
        <td>
          <a href="/group/<%= ele._id %>">
            <%= ele.name %>
          </a>
        </td>
        
        <td>
          <% if ( ele.description.length> 100) { %>
          <p>
            n.slice(0 , 100) %> ...
          </p>
          <% } else { %>
          <p>
            <%= ele.description.slice(0 , 100) %>
          </p>
          <% } %>
        </td>

        <td>
          <a class="btn btn-primary" href="/editGroup/<%= ele.name %>" style="display: inline;">Edit!</a>
        </td>

        <td>
          <form action="/deleteGroup/<%= ele.name %>" method="post" style="display: inline;">
            <button class="btn btn-outline" style="background-color: rgb(231, 118, 118);">Delete </button>
          </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>

  </div>
  <% } %>


  <style>
    .table{
        margin-top: 1%;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>

</html>