<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head>
<body>
    <%- include("partials/navbar") %>


    <div class="row row-cols-2 row-cols-md-4 g-4" >

        <% if (groupList) { %>
         
            <% for( let index = 0; index < groupList.length; index++ ) { %>

            <div class="col">

                <div class="card h-100 text-center">

                    <div class="card-body">

                        <% let ele = groupList[index] ;  %>

                        <h5 class="card-title"><a href="/<%= ele.name %>"><%= ele.name %></a></h5>
                        
                        <% if ( ele.description.length > 100) { %>
                            <p class="card-text"><%= ele.description.slice(0 , 100) %> ...</p>
                        <% } else { %>
                            <p class="card-text"><%= ele.description.slice(0 , 100) %></p>
                        <% } %>
                        
                        <div class="button-group">

                            <a class="btn btn-primary" href="/editGroup/<%= ele.name %>" style="display: inline;">Edit!</a>
                            <form action="/deleteGroup/<%= ele.name %>" method="post" style="display: inline;">
                                <button class="btn" style="background-color: rgb(231, 118, 118);">Delete </button>
                            </form>
                        </div>
                
                    </div>

                </div>
            
            
            </div>
    
            <% } %>
        
    
        <% } %>
        
        
        </div>

    <style>
        .card-group{
            margin : 1%;
        }

        .card{
            margin : 1%;
        }

        .row{
            margin : 1% ;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>
</html>