<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">

  <title>
    <%= title %>
  </title>


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


  <!-- Custom styles for this template -->
  <link href="stylesheets/auth.css" rel="stylesheet">
</head>

<body class="text-center">

  <% if (message) { %>
    <p>
      <%= message %>
    </p>
  <% } %>

  <main class="form-signin w-100 m-auto">
    <form action="/<%= postSubmit %>" , method="post">

      <h1 class="h3 mb-3 fw-normal">Please <%= title %>
      </h1>

      <div class="form-floating">
        <input type="text" class="form-control" id="floatingInput" placeholder="Username" name="username" required>
        <label for="floatingInput">Your Username</label>
      </div>
      <div class="form-floating">
        <input type="email" class="form-control" id="floatingInput" placeholder="Email" name="email" required>
        <label for="floatingInput">Your Email</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password"
          required>
        <label for="floatingPassword">Password</label>
      </div>


      <button class="w-100 btn btn-lg btn-primary" type="submit">
        <%= title %>
      </button>
    </form>

    <br>
    <a href="/register" class="btn btn-outline-primary btn-lg">Sign in</a>

    <br>
    <br>
    <div>
      <span style="display: block;">Or, continue with</span>
      <a href="/auth/google" class="btn btn-outline-primary btn-lg">Google</a>
    </div>
  </main>

</body>

</html>